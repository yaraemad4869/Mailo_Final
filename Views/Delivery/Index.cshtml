@model IEnumerable<Delivery>

@{
    ViewData["Title"] = "Show Deliveries";
}
<div class="container">
    <div class="d-block d-md-flex justify-content-between align-items-center">
		<h1 class="text-primary">Deliveries</h1>
		<a href="@Url.Action("Create")" class="btn btn-primary p-2">Create New Delivery</a>
	</div>
    <a asp-action="ProductManagement" asp-controller="Product" class="btn btn-primary my-2">Go to Product Management</a>

    @if (Model.Any())
    {
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Delivery Cost</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.DeliveryFee</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                </td>
            </tr>
        }
    </tbody>
    </table>
    }

    else{
    <h2 class="text-center">No Deliveries</h2>
    }

</div>