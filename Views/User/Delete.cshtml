@model Product
@{
    ViewData["Title"] = "Delete Product";
}
<style>
    .container1 {
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.4);
    }
</style>
<div class="container">
    <h1 class="text-primary">Delete Product</h1>
    <div class="container1 d-flex flex-column justify-content-center bg-light my-3 rounded-3 p-5">
                <form method="post" asp-action="Delete">
                    <input asp-for="ID" type="hidden" />
                    <div class="mb-3">
						<h5><label asp-for="Name" class="form-label"></label></h5>
                        <input asp-for="Name" disabled class="form-control" />
                    </div>
                    <div class="mb-3">
						<h5><label asp-for="Price" class="form-label"></label></h5>
                        <input asp-for="Price" disabled class="form-control" />
                    </div>
                    <div class="mb-3">
						<h5><label asp-for="Discount" class="form-label"></label></h5>
                        <input asp-for="Discount" disabled class="form-control" />
                    </div>
                    <div class="mb-3">
						<h5><label asp-for="Description" class="form-label"></label></h5>
                        <input asp-for="Description" disabled class="form-control" />
                    </div>
                  
                    <button type="submit" class="btn btn-primary">Delete</button>
            <a asp-action="Index" asp-controller="Product" class="btn btn-danger">Cancel</a>
        </form>
            </div>
        </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
      
    </script>
}
