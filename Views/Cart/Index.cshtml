                    <div class="card shadow-sm position-relative d-flex flex-column justify-content-between">
                        <a asp-action="ProductDetails" asp-controller="Product" asp-route-id="@item.product.ID" class="text-decoration-none text-black">
                            @if (availableVariants == null)
                            {
                                <h6 class="text-white bg-danger position-absolute rounded-3" style=" top:5px; right:5px;padding:10px;">Sold Out</h6>
                            }
                            <img src="@item.product.imageSrc" class="card-img-top" alt="@item.product.Name">
                        </a>
                        <div class="card-body">
                            <a asp-action="ProductDetails" asp-controller="Product" asp-route-id="@item.product.ID" class="text-decoration-none text-black">

                                <h3 class="card-title fw-bold">@item.product.Name</h3>

                                <h4 class="mt-2 text-primary">
                                    @item.product.TotalPrice
                                    @if (item.product.TotalPrice != item.product.Price)
                                    {
                                        <span class="text-muted fs-6">
                                            <del class="text-danger">@item.product.Price</del>
                                        </span>
                                    }
                                </h4>
                            </a>
                            @if (availableVariants == null)
                            {
                                <h5 class="text-danger mt-3">Sold Out</h5>

                            }
                            else
                                {
                                    <h6 class="fw-bold">Size: @availableVariants.Size.SizeName</h6>

                                <h6 class="fw-bold">Color: @availableVariants.Color.ColorName</h6>
                                <div class="quantity-control">
                                    <form asp-action="DecreaseQuantity" asp-controller="Cart" method="post" class="d-inline">
                                        <input type="hidden" name="productId" value="@item.ProductID" />
                                        <input type="hidden" name="variantId" value="@item.VariantID" />
                                        <button type="submit" class="btn btn-sm btn-outline-secondary">
                                            <i class="fas fa-minus"></i>
                                        </button>
                                    </form>
                                    <span>@item.Quantity</span>
                                    <form asp-action="IncreaseQuantity" asp-controller="Cart" method="post" class="d-inline">
                                        <input type="hidden" name="productId" value="@item.ProductID" />
                                        <input type="hidden" name="variantId" value="@item.VariantID" />
                                        <button type="submit" class="btn btn-sm btn-outline-secondary">
                                            <i class="fas fa-plus"></i>
                                        </button>
                                    </form>
                                </div>

                                    <div class="d-flex justify-content-evenly align-items-center mt-2 w-100">
                                    <form asp-action="RemoveProduct" asp-controller="Cart" method="post" class="d-grid mt-2">
                                        <input type="hidden" name="productId" value="@item.ProductID" />
                                        <input type="hidden" name="variantId" value="@item.VariantID" />
                                        <button type="submit" class="btn btn-danger">
                                            <i class="bi bi-trash3-fill"></i> Remove
                                        </button>
                                    </form>

                                        <form asp-action="AddtoWishlist" asp-controller="Wishlist" method="post" class="col-5">
