        <div class="mt-4">
            

            @if (TempData["PromoMessage"] != null)
            {
                var status = TempData["PromoStatus"]?.ToString();
                var alertClass = status == "Success" ? "alert-success" : "alert-danger";
                <div class="alert @alertClass mt-3">
