@model Order
@{
    ViewData["Title"] = "Apply Promo Code";
}
<style>
    .container1 {
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.4);
    }
</style>
<div class="container">
<h1>Apply Promo Code</h1>
    <div class="container1 d-flex flex-column justify-content-center bg-light my-3 rounded-3 p-3">

<form asp-action="ApplyPromoCode" method="post">
			<h5><label for="promoCode">Promo Code</label></h5>
    <input type="text" name="PromoCode" class="my-2" id="promoCode" />
    <button type="submit">Apply</button>
</form>
</div>
</div>
@if (TempData["Message"] != null)
{
    <p>@TempData["Message"]</p>
}
