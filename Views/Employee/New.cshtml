@model Employee
@using Mailo.Data.Enums;
@{
    ViewData["Title"] = "New";
}


<style>
    .container1 {
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.4);
    }
</style>

<div class="container">
        <h1 class="text-primary">New Employee</h1>
    <div class="container1 d-flex flex-column justify-content-center bg-light my-3 rounded-3 p-5">

        <form asp-action="New">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input asp-for="IsEmailVerified" value=@true hidden/>
            <input asp-for="UserType" value="@UserType.Employee" hidden />
            <input asp-for="FullName" value="." hidden/>

                <input asp-for="FullName" hidden />

            @if (ViewBag.Message!=null)
            {
                <div class="alert alert-success">@ViewBag.Message</div>
            }
            <div class="form-group mb-3">
                <h5>
                    <label asp-for="FName" class="control-label me-2"></label>
					<i class="fas fa-user"></i>
				</h5>
                <input asp-for="FName" class="form-control" />
                <span asp-validation-for="FName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <h5>
                    <label asp-for="LName" class="control-label me-2"></label>
                    <i class="fas fa-user"></i>
                </h5>
                <input asp-for="LName" class="form-control " />
                <span asp-validation-for="LName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <h5>
                    <label asp-for="Username" class="control-label me-2"></label>
                    <i class="fas fa-user-circle"></i>
                </h5>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                    <h5><label asp-for="PhoneNumber" class="control-label me-2"></label>
                    <i class="fas fa-phone"></i>
                </h5>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <h5><label asp-for="Email" class="control-label me-2"></label>
                    <i class="fas fa-envelope"></i>
                </h5>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <h5><label asp-for="Password" class="control-label me-2"></label>
					<i class="fas fa-lock"></i>
				</h5><input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
				<h5><label asp-for="Gender" class="control-label me-2"></label><i class="fas fa-venus-mars"></i></h5>

                    @foreach (var gender in Enum.GetValues(typeof(Mailo.Data.Enums.Gender)))
                    {
                        <div class="form-check">
                                <input asp-for="Gender" class="form-check-input" type="radio" value="@gender" id="@gender.ToString()">
                            <label class="form-check-label" for="@gender.ToString()">@gender.ToString()</label>
                        </div>
                    }

                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <h5>
                        <label asp-for="City" class="control-label me-2"></label>
					    <i class="fas fa-map-marker-alt"></i>
				    </h5>
                    <input asp-for="City" class="form-control" readonly value="Egypt" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>

                    <div class="form-group mb-3">
                        <h5><label asp-for="Governorate" class="control-label me-2"></label>
					<i class="fas fa-map-marker-alt"></i>
				</h5>
                        <select asp-for="Governorate" class="form-control" asp-items="Html.GetEnumSelectList<Mailo.Data.Enums.Governorate>()">
                         <option value="">-- Select Governorate --</option>

                        </select>
                        <span asp-validation-for="Governorate" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <h5><label asp-for="Address" class="control-label me-2"></label>
					<i class="fas fa-map-marker-alt"></i>
				</h5><input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                <div class="form-group mb-3">
                    <input type="submit" value="Add Employee" class="btn btn-primary me-2" />

                    <a asp-action="Index" class="btn btn-danger">Cancel</a>
                </div>
            </form>
        </div>
    </div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
