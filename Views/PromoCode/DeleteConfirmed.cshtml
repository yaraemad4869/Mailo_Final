@model PromoCode
<div class="container">
<h1 class="text-danger">Delete Promo Code</h1>
<p>Are you sure you want to delete this promo code?</p>
<dl class="row">
    <dt class="col-sm-2">Code</dt>
    <dd class="col-sm-10">@Model.Code</dd>

    <dt class="col-sm-2">Discount Percentage</dt>
    <dd class="col-sm-10">@Model.DiscountPercentage %</dd>

    <dt class="col-sm-2">Expiry Date</dt>
    <dd class="col-sm-10">@Model.ExpiryDate.ToShortDateString()</dd>
</dl>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
</div>