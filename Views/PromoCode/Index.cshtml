@model IEnumerable<PromoCode> 
@{
    ViewData["Title"] = "Manage Promo Codes";
}
<style>
    .container1 {
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.4);
    }
</style>
<div class="container">
<div class="d-block d-md-flex justify-content-between align-items-center">
<h1 class="text-primary">Promo Codes</h1>
	<a asp-action="Create" class="btn btn-primary">Add Promo Code</a>
</div>
<div class="container1 d-flex flex-column justify-content-center bg-light my-3 rounded-3 p-3">


@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Code</th>
            <th>Discount (%)</th>
            <th>Expiry Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var promo in Model)
        {
            <tr>
                <td>@promo.Id</td>
                <td>@promo.Code</td>
                <td>@promo.DiscountPercentage</td>
                <td>@promo.ExpiryDate.ToString("yyyy-MM-dd")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@promo.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@promo.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
	</div>
</div>