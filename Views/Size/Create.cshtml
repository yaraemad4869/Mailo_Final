@model Mailo.Models.Size

@{
    ViewData["Title"] = "Create Size";
}
<style>
    .container1 {
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.4);
    }
</style>
<div class="container">
    <h1 class="text-primary">Add Size</h1>
    <div class="container1 d-flex flex-column justify-content-center bg-light my-3 rounded-3 p-5">

        <form asp-action="Create" method="post">
			<h5><label asp-for="SizeName">Size Name</label></h5>
            <input asp-for="SizeName" class="form-control my-2" required />
            <span asp-validation-for="SizeName" class="text-danger"></span>
            <div class="d-flex mt-2">
                <button type="submit" class="btn btn-primary me-2">Add</button>
                <a asp-action="Index" class="btn btn-danger">Cancel</a>
            </div>
        </form>
    </div>
</div>

