@model IEnumerable<Size>
@{
    ViewData["Title"] = "Show Size";
}

<div class="container">
    <div class="d-block d-md-flex justify-content-between  align-items-center">
        <h1 class="text-primary">Sizes</h1>
        <a href="@Url.Action("Create")" class="btn btn-primary p-2">Add Size</a>
    </div>
    <a asp-action="ProductManagement" asp-controller="Product" class="btn btn-primary">Go to Product Management</a>

@if(Model.Any()){
    <table class="table">
        <thead>
            <tr class="text-primary">
                <th>Name</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var size in Model)
            {
                <tr>
                    <td>@size.SizeName</td>
                    <td><a asp-action="Edit" asp-route-id="@size.Id" class="btn btn-primary">Edit</a></td>
                </tr>
            }
        </tbody>
    </table>
    }

    else
    {
        <h2 class="text-center">No Sizes</h2>
    }

</div>
