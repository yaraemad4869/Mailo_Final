@{
    ViewData["Title"] = "Verify Code";
}
<style>
    .container1 {
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.4);
    }
</style>
<div class="container">
    <h1>Verify Code</h1>
    <div class="container1 d-flex flex-column justify-content-center bg-light my-3 rounded-3 p-3">

    <form asp-action="VerifyCode" method="post">
        <div class="form-group mb-3">
            <label for="code">Enter the verification code sent to your email:</label>
            <input type="text" id="code" name="code" class="form-control mt-2" required />
        </div>
        <button type="submit" class="btn btn-primary">Verify</button>
    </form>
    </div>
    @if (ViewBag.Message != null)
    {
        <div class="alert alert-info mt-3">
            @ViewBag.Message
        </div>
    }
</div>