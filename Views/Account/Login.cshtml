@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}
<style>
.container1 {
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.4);
}
</style>
<div class="container">
    <h1 class="text-primary">Login</h1>
    <div class="container1 d-flex flex-column justify-content-center bg-light my-3 rounded-3 p-5">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3 d-flex flex-column">
                <h5 class="mb-2">
                    <label asp-for="UsernameOrEmail" class="control-label me-2">Username or Email</label><i class="fas fa-user-circle"></i>
                </h5>
                <input asp-for="UsernameOrEmail" class="form-control" />
                
                <span asp-validation-for="UsernameOrEmail" class="text-danger"></span>
            </div>
            <div class="form-group mb-3 d-flex flex-column">

                <div class="d-flex justify-content-between align-items-center align-items-start">
                    <h5 class="mb-2">
                        <label asp-for="Password" class="control-label me-2"></label><i class="fas fa-lock"></i>
                    </h5>
                    <div class="d-none d-md-block">
                        <a asp-action="ForgotPassword" class="btn btn-primary text-decoration-none">Forgot Password</a>

                    </div>
                </div>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
                
            <div class="form-group mb-3">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="text-center my-2">  
        <div class="d-block d-md-none">
            <a asp-action="ForgotPassword">Forgot Password</a>
        </div>
        <p>
            Don't have an account? <a asp-action ="Registration">Register Here</a>
        </p>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
